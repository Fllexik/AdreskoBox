<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Hlavný kontajner pre nastavenie výstupu -->
<VBox fx:id="rootVbox"
      spacing="10"
      styleClass="tab-content-area;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.bakaj.adreskobox.controller.OutputSettingTabController">

    <!-- Hlavný nadpis sekcie -->
    <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
           text="Nastavenie výstupu" />

    <!-- Sekcia pre údaje odosielateľa -->
    <TitledPane text="Údaje odosielateľa" expanded="true" styleClass="titled-pane">
        <VBox spacing="10">
            <GridPane styleClass="form-grid">

                <!-- Pole pre meno odosielateľa -->
                <Label text="Meno odosielateľa:"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>
                <TextField fx:id="senderNameField"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="0"/>

                <!-- Pole pre ulicu a číslo -->
                <Label text="Ulica a číslo:"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>
                <TextField fx:id="senderStreetField"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>

                <!-- Pole pre PSČ a mesto -->
                <Label text="PSČ a mesto:"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="senderCityField"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>

                <!-- Informačná poznámka o manuálnom označení druhu zásielky -->
                <Label text="Poznámka: V šablóne je potrebné manuálne označiť druh zásielky."
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="3"
                       wrapText="true"/>

                <!-- Nastavenie rozloženia stĺpcov -->
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </VBox>
    </TitledPane>

    <!-- Sekcia pre nastavenie šablóny podacieho hárku -->
    <TitledPane text="Šablóna podacieho hárku" expanded="true" styleClass="titled-pane">
        <VBox spacing="10">
            <!-- Ovládacie prvky pre výber a vytvorenie šablóny -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="templatePathField"
                           HBox.hgrow="ALWAYS"
                           editable="false"
                           promptText="Cesta k šablóne podacieho hárku"/>
                <Button fx:id="browseTemplateButton"
                        text="Prehľadávať"
                        onAction="#handleBrowseTemplate"/>
                <Button fx:id="createTemplateButton"
                        text="Vytvoriť novú šablónu"
                        onAction="#handleCreateTemplate"/>
            </HBox>

            <!-- Informačná poznámka o automatickom vyplňovaní šablóny -->
            <Label text="Poznámka: V šablóne sa automaticky vyplnia údaje odosielateľa, typ zásielky a zoznam príjemcov."
                   wrapText="true"/>
        </VBox>
    </TitledPane>

    <!-- Záverečná poznámka pre používateľa -->
    <Label style="-fx-font-style: italic;"
           text="Pre pokračovanie vyplňte všetky povinné údaje. Tieto informácie budú použité pri generovaní podacieho hárku."
           wrapText="true"/>
</VBox>
