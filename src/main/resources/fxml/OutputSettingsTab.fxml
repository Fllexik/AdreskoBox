<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.bakaj.adreskobox.controller.ImportController">

    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Import dát" />

    <GridPane hgap="10.0" vgap="10.0">
        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

        <Label text="Zdrojový súbor:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="filePathField" editable="false" prefWidth="350" />
            <Button onAction="#handleSelectFile" text="Vybrať súbor" />
        </HBox>

        <Label text="Oddeľovač (CSV):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="hasHeaderChecKBox" value="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <Separator />

    <Label style="-fx-font-weight: bolt;" text="Nastavenia rozmerov etikiet" />

    <HBox spacing="10">
        <VBox spacing="10">
            <Label text="Prednastavené formaty:" />
            <ComboBox fx:id="predefinedFormatsComboBox" onAction="#handlePredefinedFormatSelection" />
        </VBox>

        <VBox spacing="10">
            <Label text="Vlastné rozmery:" />
            <GridPane hgap="10" vgap="5">
                <Label text="Šírka etikety (mm)" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="widthField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Výška etikety (mm)" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="heightField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Počet etiket - stĺpce:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="columnsField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Počet etiket - riadky:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="rowsField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Ľavý okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="leftMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Pravý okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="rightMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Horný okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="topMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Dolný okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="bottomMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Medzera medzi etiketami - stĺpcami (mm):" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <TextField fx:id="horizontalGapField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                <Label text="Medzera medzi etiketami - riadkami (mm):" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                <TextField fx:id="verticalGapField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
        </VBox>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#handlePreviewData" text="Náhľad dát" />
        <Button onAction="#handleImportData" text="Importovať" />
    </HBox>
</VBox>
