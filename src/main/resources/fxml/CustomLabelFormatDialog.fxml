<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>

<!-- Okno pre nastavenie vlastného formátu štítkov -->
<HBox spacing="20"
      styleClass="tab-content-area"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.bakaj.adreskobox.controller.CustomLabelFormatController">

    <!-- Ľavá strana: Formulár pre nastavenie rozmerov -->
    <VBox spacing="5"
          prefWidth="450">

        <!-- Nadpis -->
        <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
               text="Nastavenie vlastného formátu štítku"
               wrapText="true"
               maxWidth="Infinity"/>

        <!-- Popis -->
        <Label text="Zadajte presné rozmery štítkov a ich usporiadanie na stránke A4 (210 x 297 mm)."
               wrapText="true"/>

        <!-- Formulár s parametrami -->
        <GridPane  styleClass="form-grid">

            <!-- Názov formátu -->
            <Label text="Názov formátu:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"/>
            <TextField fx:id="nameField"
                       prefWidth="200"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>

            <!-- Rozmery štítku -->
            <Label text="Šírka štítku (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
            <TextField fx:id="widthField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>

            <Label text="Výška štítku(mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="2"/>
            <TextField fx:id="heightField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>

            <!-- Usporiadanie na stránke -->
            <Label text="Počet stĺpcov:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="3"/>
            <TextField fx:id="columnsField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>

            <Label text="Počet riadkov:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="4"/>
            <TextField fx:id="rowsField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="4"/>

            <!-- Okraje stránky -->
            <Label text="Ľavý okraj (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="5"/>
            <TextField fx:id="leftMarginField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="5"/>

            <Label text="Pravý okraj (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="6"/>
            <TextField fx:id="rightMarginField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="6"/>

            <Label text="Horný okraj (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="7"/>
            <TextField fx:id="topMarginField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="7"/>

            <Label text="Dolný okraj (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="8"/>
            <TextField fx:id="bottomMarginField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="8"/>

            <!-- Medzery medzi štítkami -->
            <Label text="medzera medzi stĺpcami (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="9"/>
            <TextField fx:id="horizontalGapField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="9"/>

            <Label text="Medzera medzi riadkami (mm):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="10"/>
            <TextField fx:id="verticalGapField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="10"/>

            <!-- Maximálna dĺžka adresy -->
            <Label text="Max. dĺžka adresy (znakov):"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="11"/>
            <TextField fx:id="maxAddressLengthField"
                       prefWidth="80"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="11"/>
        </GridPane>

        <!-- Chybové hlásenie -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" wrapText="true"/>

        <!-- Tlačidlá -->
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Button text="Zrušiť" onAction="#handleCancel"/>
            <Button text="Uložiť" onAction="#handleSave" defaultButton="true"/>
        </HBox>
    </VBox>

    <!-- Pravá strana: Náhľad rozmiestnenia štítkov -->
    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <Label text="Náhľad rozmiestnenia na stránke"
               style="-fx-font-size: 14; -fx-font-weight: bold;"/>

        <!-- Container pre náhľad s plným využitím priestoru -->
        <VBox fx:id="previewContainer"
              alignment="CENTER"
              spacing="10"
              styleClass="titled-pane"
              VBox.vgrow="ALWAYS"
              minHeight="400"
              prefHeight="600">

            <Canvas fx:id="previewCanvas"
                    styleClass="preview-canvas"/>

            <Label text="Modré obdĺžniky reprezentujú jednotlivé štítky na stránke A4"
                   style="-fx-font-size: 11; -fx-text-fill: #666666;"
                   wrapText="true"/>
        </VBox>
    </VBox>
</HBox>