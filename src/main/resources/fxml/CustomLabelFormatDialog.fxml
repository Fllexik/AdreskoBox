<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<VBox spacing="15" style="-fx-padding: 20;" prefWidth="450" prefHeight="550"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.bakaj.adreskobox.controller.CustomLabelFormatController">
    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Nastavenie vlastného formátu štítku"/>

    <Label text="Zadajte presné rozmery štítkov a ich usporiadanie na stránke A4 (210 x 297 mm)."
           wrapText="true"/>

    <GridPane hgap="10.0" vgap="10.0">
        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

        <Label text="Názov formátu:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Šírka štítku (mm):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="widthField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Výška štítku(mm):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="heightField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Počet stĺpcov:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="columnsField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Počet riadkov:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="rowsField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Ľavý okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="leftMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Pravý okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="rightMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Horný okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="topMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Dolný okraj (mm):" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="bottomMarginField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="medzera medzi stĺpcami (mm):" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextField fx:id="horizontalGapField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

        <Label text="Medzera medzi riadkami (mm):" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <TextField fx:id="verticalGapField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

        <Label text="Max. dĺžka adresy (znakov):" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
        <TextField fx:id="maxAddressLengthField" prefWidth="80" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
    </GridPane>

    <TitledPane text="Náhľad rozmiestnenia na stránke" expanded="true">
        <VBox alignment="CENTER" spacing="10">
            <Canvas fx:id="previewCanvas" width="210" height="297"/>
            <Label text="Biele obdĺžniky reprezentujú jednotlivé štítky na stránke A4"/>
        </VBox>
    </TitledPane>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" wrapText="true"/>

    <HBox alignment="CENTER_RIGHT" spacing="15">
        <Button text="Zrušiť" onAction="#handleCancel"/>
        <Button text="Uložiť" onAction="#handleSave" defaultButton="true"/>
    </HBox>
</VBox>
