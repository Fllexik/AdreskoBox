<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>

<!-- Hlavný kontajner pre generovanie výstupných súborov -->
<VBox fx:id="rootVbox"
      spacing="10"
      styleClass="title-vbox"
      xmlns="http://javafx.com/javafx/17.0.13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.bakaj.adreskobox.controller.GenerateTabController">

    <!-- Hlavný nadpis sekcie -->
    <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
           text="Generovanie výstupných súborov"/>

    <!-- Sekcia pre výber výstupného adresára -->
    <TitledPane text="Výstupný adresár" expanded="true" styleClass="titled-pane">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- Pole zobrazujúce cestu k výstupnému adresáru -->
                <TextField fx:id="outputDirField"
                           HBox.hgrow="ALWAYS"
                           editable="false"
                           promptText="Cesta k výstupnému adresáru"/>
                <!-- Tlačidlo pre zmenu výstupného adresára -->
                <Button fx:id="browseOutputDirButton"
                        text="Zmeniť adresár"
                        onAction="#handleBrowseOutputDir"/>
            </HBox>
        </VBox>
    </TitledPane>

    <!-- Sekcia so súhrnom generovania -->
    <TitledPane text="Súhrn" expanded="true" styleClass="titled-pane">
        <GridPane hgap="15" vgap="10">

            <!-- Zobrazenie počtu strán so štítkami -->
            <Label text="Počet strán so štítkami:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"/>
            <Label fx:id="labelPagesCountLabel"
                   text="0" style="-fx-font-weight: bold;"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>

            <!-- Zobrazenie počtu podacích hárkov -->
            <Label text="Počet podacích hárkov:"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
            <Label fx:id="submissionSheetsCountLabel"
                   text="0"
                   style="-fx-font-weight: bold;"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>

            <!-- Nastavenie rozloženia stĺpcov -->
            <columnConstraints>
                <ColumnConstraints minWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
        </GridPane>
    </TitledPane>

    <!-- Sekcia s protokolom generovania -->
    <TitledPane text="Protokol generovania" expanded="true" styleClass="titled-pane">
        <!-- Textová oblasť pre zobrazenie protokolu generovania -->
        <TextArea fx:id="generationLogArea"
                  editable="false"
                  wrapText="true"
                  VBox.vgrow="ALWAYS"
                  minHeight="50"/>
    </TitledPane>

    <!-- Sekcia s ovládacími tlačidlami -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <!-- Tlačidlo pre otvorenie výstupného adresára -->
        <Button fx:id="openOutputDirButton"
                text="Otvoriť výstupný adresár"
                onAction="#handleOpenOutputDir"/>
        <!-- Hlavné tlačidlo pre generovanie súborov -->
        <Button fx:id="generateButton"
                text="Generovať súbory"
                onAction="#handleGenerate"
                defaultButton="true"/>
        <!-- Tlačidlo pre reštart procesu -->
        <Button fx:id="startOverButton"
                text="Začať odznova"
                onAction="#handleStartOver"/>
    </HBox>
</VBox>
