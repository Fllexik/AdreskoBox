<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.bakaj.adreskobox.controller.GenerateTabController">

    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Generovanie výstupných súborov"/>

    <TitledPane text="Výstupný adresár" expanded="true">
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="outputDirField" HBox.hgrow="ALWAYS" editable="false" promptText="Cesta k výstupnému adresáru"/>
                <Button fx:id="browseOutpuDirButton" text="Zmeniť adresár" onAction="#handleBrowseOutputDir"/>
            </HBox>
        </VBox>
    </TitledPane>

    <TitledPane text="Súhrn" expanded="true">
        <GridPane hgap="15" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Počet strán so štítkami:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="labelPagesCountLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Počet podacích hárkov:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="submissionSheetsCountLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
        </GridPane>
    </TitledPane>

    <TitledPane text="Protokol generovania" expanded="true" VBox.vgrow="ALWAYS">
        <TextArea fx:id="generationLogArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" minHeight="150"/>
    </TitledPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="openOutputDirButton" text="Otvoriť výstupný adresár" onAction="#handleOpenOutputDir"/>
        <Button fx:id="generateButton" text="Generovť súbory" onAction="#handleGenerate" defaultButton="true"/>
        <Button fx:id="startOverButton" text="Začať odznova" onAction="#handleStartOver"/>
    </HBox>
</VBox>
