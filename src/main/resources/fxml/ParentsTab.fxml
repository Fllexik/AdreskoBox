<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.bakaj.adreskobox.controller.ImportController">

    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Import dát" />

    <GridPane hgap="10.0" vgap="10.0">
        <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

        <Label text="Zdrojový súbor:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="filePathField" editable="false" prefWidth="350" />
            <Button onAction="#handleSelectFile" text="Vybrať súbor" />
        </HBox>
    </GridPane>
</VBox>
