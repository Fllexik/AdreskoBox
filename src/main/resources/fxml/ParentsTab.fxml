<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.bakaj.adreskobox.controller.ParentsTabController">

    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Výber rodičov" />

    <TableView fx:id="parrentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="selectColumn" text="Vybrať" prefWidth="60"/>
            <TableColumn fx:id="studentColumn" text="Študent" prefWidth="150"/>
            <TableColumn fx:id="nameColumn" text="Rodič" prefWidth="200" />
            <TableColumn fx:id="addressColumn" text="Adresa" prefWidth="300"
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Vybrať všetkých" onAction="#handleSelectAll"/>
        <Button text="Zrušiť výber" onAction="#handleUnselectAll"/>
        <Label text="Vybraných rodičov: "/>
        <Label fx:id="selectedCountLabel" style="-fx-font-weight: bold;" text="0"/>
    </HBox>
</VBox>
