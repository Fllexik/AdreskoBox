<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    ParentsTab.fxml - Záložka pre správu a výber rodičov

    Obsahuje:
    - Tabuľku rodičov s možnosťou výberu
    - Tlačidlá pre hromadný výber/zrušenie výberu
    - Počítadlo vybraných rodičov
-->

<VBox fx:id="rootVbox"
      styleClass="tab-content-area;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sk.bakaj.adreskobox.controller.ParentsTabController">

    <!-- Hlavička sekcie -->
    <Label style="-fx-font-size: 16; -fx-font-weight: bold;"
           text="Výber rodičov" />

    <!-- Hlavná tabuľka rodičov -->
    <TableView fx:id="parentsTable"
               VBox.vgrow="ALWAYS"
               styleClass="table-view">
        <columns>
            <!-- Stĺpec pre výber (checkbox) -->
            <TableColumn fx:id="selectColumn"
                         text="Vybrať"
                         prefWidth="70"
                         minWidth="70"
                         maxWidth="70"
                         resizable="false"
                         sortable="false"/>

            <!-- Stĺpec pre meno študenta -->
            <TableColumn fx:id="studentColumn"
                         text="Študent"
                         prefWidth="180"
                         minWidth="120"/>

            <!-- Stĺpec pre meno rodiča -->
            <TableColumn fx:id="nameColumn"
                         text="Rodič"
                         prefWidth="200"
                         minWidth="150"/>

            <!-- Stĺpec pre adresu -->
            <TableColumn fx:id="addressColumn"
                         text="Adresa"
                         prefWidth="350"
                         minWidth="200"/>
        </columns>

        <!-- Nastavenie vlastností tabuľky -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Spodná lišta s tlačidlami a počítadlom -->
    <HBox alignment="CENTER_RIGHT"
          spacing="10"
          styleClass="navigation-hbox">

        <!-- Tlačidlá pre hromadné operácie -->
        <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Vybrať všetkých"
                onAction="#handleSelectAll"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="140"/>

        <Button text="Zrušiť výber"
                onAction="#handleUnselectAll"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="140"/>
        </HBox>

        <!-- Rozdeľovač pre priestor -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Počítadlo vybraných rodičov -->
        <HBox spacing="5" alignment="CENTER_RIGHT">
            <Label text="Vybraných rodičov: "
                   style="-fx-font-size: 14;"/>

        <Label fx:id="selectedCountLabel"
               style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #2196F3;"
               text="0"/>
        </HBox>
    </HBox>
</VBox>
